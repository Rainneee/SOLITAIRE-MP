<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane fx:id="gamePane" prefHeight="650.0" prefWidth="900.0" style="-fx-background-color: green;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.GameController">
   <children>
      <Canvas fx:id="gameCanvas" height="400.0" onMouseDragged="#dragCard" onMousePressed="#pickUpCard" onMouseReleased="#dropCard" width="600.0" />
      <Button layoutX="7.0" layoutY="7.0" mnemonicParsing="false" onAction="#Draw" prefHeight="160.0" prefWidth="110.0" style="-fx-background-color: transparent;" />
      <Label layoutX="286.0" layoutY="51.0" text="Score" textFill="WHITE">
         <font>
            <Font name="Times New Roman Bold" size="21.0" />
         </font>
      </Label>
      <Label fx:id="currentScore" layoutX="286.0" layoutY="75.0" prefHeight="24.0" prefWidth="50.0" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="Times New Roman Bold" size="21.0" />
         </font>
      </Label>
   </children>
</Pane>
